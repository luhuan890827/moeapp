<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:layout_below="@+id/player_seek"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/ib_prev"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1.00"
            android:background="@color/transparent"
            android:src="@android:drawable/ic_media_previous" />

        <ImageButton
            android:id="@+id/ib_pp"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:src="@android:drawable/ic_media_pause" />

        <ImageButton
            android:id="@+id/ib_next"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:src="@android:drawable/ic_media_next" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/player_seek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
         >

        <TextView
            android:id="@+id/time_played"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:minWidth="35dp"
            android:text="--:--" />

        <SeekBar
            android:id="@+id/playing_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           	android:layout_toLeftOf="@+id/time_remain"
           		android:layout_toRightOf="@+id/time_played"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/time_remain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:minWidth="35dp"
            android:text="--:--" />
    </RelativeLayout>

</RelativeLayout>