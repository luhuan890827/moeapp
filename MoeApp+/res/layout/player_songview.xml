<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:id="@+id/player_song_view"
    >
     <ImageView
        android:id="@+id/big_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:src="@drawable/default_cover_big"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
         />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:layout_marginTop="10dp"
            android:layout_alignParentBottom="true"
            >

            <ImageButton
                
                android:id="@+id/song_fav"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/stateful_btn"
                android:scaleX="0.77"
        		android:scaleY="0.77"
                android:src="@android:drawable/btn_star_big_off" />

            

            <ImageButton
                android:id="@+id/song_save"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
               android:background="@drawable/stateful_btn"
                android:src="@android:drawable/stat_sys_download_done" />

            <ImageButton
                android:id="@+id/song_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/stateful_btn"
                android:src="@android:drawable/ic_menu_share" />
        </LinearLayout>
</RelativeLayout>