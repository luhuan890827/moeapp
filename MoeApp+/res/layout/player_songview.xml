<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <ImageView
        android:id="@+id/big_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/default_cover_big"
        android:adjustViewBounds="true"
         />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:layout_alignBottom="@+id/big_cover"
            >

            <ImageButton
                
                android:id="@+id/ib_fav"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/stateful_btn"
                android:scaleX="0.77"
        		android:scaleY="0.77"
                android:src="@android:drawable/btn_star_big_off" />

            

            <ImageButton
                android:id="@+id/ib_save"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
               android:background="@drawable/stateful_btn"
                android:src="@android:drawable/stat_sys_download_done" />

            <ImageButton
                android:id="@+id/ib_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/stateful_btn"
                android:src="@android:drawable/ic_menu_share" />
        </LinearLayout>
</RelativeLayout>