<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/player_song_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/big_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/default_cover_big" />

    <RelativeLayout
        android:id="@+id/song_operations"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/big_cover"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <ImageButton
            android:layout_marginLeft="30dp"
            android:id="@+id/song_fav"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:scaleType="centerInside"
           android:padding="5dp"
            android:background="@drawable/stateful_btn"
            android:src="@android:drawable/btn_star_big_off" />

        <ImageButton
            android:id="@+id/song_save"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:scaleType="center"
            android:background="@drawable/stateful_btn"
            android:src="@android:drawable/stat_sys_download_done" />

        <ImageButton
            android:layout_marginRight="30dp"
            android:id="@+id/song_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:scaleType="center"
            android:background="@drawable/stateful_btn"
            android:src="@android:drawable/ic_menu_share" />
    </RelativeLayout>

</RelativeLayout>